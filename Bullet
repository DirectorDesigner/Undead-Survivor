using UnityEngine;

public class Bullet : MonoBehaviour
{
    public float damage;
    public int per;

    Rigidbody2D rigid;

    private void Awake()
    {
        rigid = GetComponent<Rigidbody2D>(); // 초기화용
    }

    public void Init(float damage, int per, Vector3 dir) // 초기화용
    {
        this.damage = damage; // this = 해당 클래스의 변수로 접근
        this.per = per;       // 왼쪽은 클래스 변수, 오른쪽은 매개변수

        if (per >= 0)
        {
            rigid.linearVelocity = dir * 15f; // 일정한 방향과 속도로 날아감
        }
    }

    private void OnTriggerEnter2D(Collider2D collision)   // 관통 내용
    {
        if (!collision.CompareTag("Enemy") || per == -100 ) // || = 또는
            return;                                       // 적이랑 부딪힌 게 아니면 밑에 코드 실행하지 마라

        per--;

        if (per < 0)
        {
            rigid.linearVelocity = Vector2.zero; // 속도 0으로
            gameObject.SetActive(false);         // 총알 오브젝트 파괴
        }

    }

    private void OnTriggerExit2D(Collider2D collision)
    {
        if (!collision.CompareTag("Area") || per == -100) // || = 또는
            return;

        gameObject.SetActive(false);

    }

}
