using UnityEngine;
using UnityEngine.UI;

public class HUD : MonoBehaviour
{
    public enum InfoType { Exp, Level, Kill, Time, Health } // enum = 열거형
    public InfoType type; // 인포타입 변수 선언, 어떤 정보를 표시할지 선택

    Text myText;
    Slider mySlider;

    void Awake()
    {
        myText = GetComponent<Text>();      // 초기화용
        mySlider = GetComponent<Slider>();  // 초기화용
    }

    void LateUpdate()
    {
        switch (type) // 타입에 따라 다른 정보 표시
        {
            case InfoType.Exp:
                float currExp = GameManager.instance.exp;                                     // 현재 경험치
                float MaxExp = GameManager.instance.nextExp[Mathf.Min(GameManager.instance.level, GameManager.instance.nextExp.Length - 1)];      // 다음 레벨업에 필요한 경험치
                mySlider.value = currExp / MaxExp;                                            // 슬라이더 값 = 현재 경험치 / 다음 레벨업에 필요한 경험치
                break;

            case InfoType.Level:
                myText.text = string.Format("Lv.{0:F0}", GameManager.instance.level); // 레벨 텍스트 출력, F0 = 소수점 이하 0자리까지 표시
                break;
            
            case InfoType.Kill:
                myText.text = string.Format("{0:F0}", GameManager.instance.kill);  // 킬 텍스트 출력
                break;
            
            case InfoType.Time:
                float remainTime = GameManager.instance.maxGameTime - GameManager.instance.gameTime; // 남은 시간 = 최대 게임 시간 - 현재 게임 시간
                int min = Mathf.FloorToInt(remainTime / 60f);                                        // 분 = 남은 시간 / 60초, 내림 처리
                int sec = Mathf.FloorToInt(remainTime % 60f);                                        // 초 = 남은 시간 % 60초, 내림 처리 / A % B = A를 B로 나눈 나머지
                myText.text = string.Format("{0:D2}:{1:D2}", min, sec);                              // 시간 텍스트 출력, D2 = 2자리로 표시, 1자리면 앞에 0 붙임
                break;

            case InfoType.Health:
                float curHealth = GameManager.instance.health;    
                float maxHealth = GameManager.instance.maxHealth;    
                mySlider.value = curHealth / maxHealth;
                break;
        }
    }

}
